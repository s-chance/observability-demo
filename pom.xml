    <groupId>org.entropy</groupId>
    <artifactId>test-feign</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>test-feign</name>
    <packaging>pom</packaging>
    <description>test-feign</description>
    <url/>
